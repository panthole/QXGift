<com.iqiyi.qixiu.ui.gift.exrecyeclerview.GiftItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/fragment_live_room_gift_lrgifview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/fragment_live_room_gift_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/fragment_live_room_gift_num_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="10"
            android:textColor="#ffffff"
            android:textSize="11dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/fragment_live_room_gift_num_imageview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/fragment_live_room_gift_type_label"
            android:layout_width="27dp"
            android:layout_height="11dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/fragment_live_room_gift_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_live_room_gift_imageview"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <RelativeLayout
            android:id="@+id/gift_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_live_room_gift_name"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:id="@+id/fragment_live_room_gift_giftprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#333333"
                android:textSize="11dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expanded_container"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="23dp">
        </RelativeLayout>

        <TextView
            android:id="@+id/contributions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/fragment_live_room_gift_imageview_expand"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/fragment_live_room_gift_name_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_live_room_gift_imageview_expand"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <RelativeLayout
            android:id="@+id/gift_price_container_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_live_room_gift_name_expand"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:gravity="center">

            <TextView
                android:id="@+id/fragment_live_room_gift_giftprice_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#333333"
                android:textSize="11dp" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/gift_price_container_expand"
            android:text="赠送"
            android:id="@+id/fragment_live_room_gift_btsend_expand" />


    </RelativeLayout>


</com.iqiyi.qixiu.ui.gift.exrecyeclerview.GiftItemView>
